<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PureVibe</title>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/homePage.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap" rel="stylesheet">
</head>

<body>
    <%- include ('navbar') %>
        <img src="bg.png" alt="background" id="background">

        <div style="height: 100%" class="row container-fluid">
            <!-- Posts Section - col-10 -->
            <div class="col-10 posts-container" style="height: 100%; overflow-y: auto; padding: 20px;">
                <div id="posts-feed">
                    <% if (posts && posts.length> 0) { %>
                        <% posts.forEach(function(post) { %>
                            <div class="post-card">
                                <div class="post-header">
                                    <div class="post-author">
                                        <div class="author-info">
                                            <h3 class="author-name">
                                                <%= post.author %>
                                            </h3>
                                            <p class="post-date">
                                                <%= new Date(post.createdAt).toLocaleDateString('he-IL') %>
                                            </p>
                                        </div>
                                        <img class="author-avatar" src="/profile.png" alt="profile">
                                    </div>
                                </div>

                                <div class="post-content">
                                    <% if (post.description) { %>
                                        <p class="post-description">
                                            <%= post.description %>
                                        </p>
                                        <hr style="margin-bottom: 15px; padding: 0%;">
                                        <% } %>
                                            <% if (post.image) { %>
                                                <div class="post-image-container">
                                                    <img class="post-image" src="/image/<%= post._id %>"
                                                        alt="Post image">
                                                </div>
                                                <% } %>
                                </div>

                                <div class="post-actions">
                                    <button class="action-btn like-btn">わ 转</button>
                                    <button class="action-btn comment-btn" data-post-id="<%= post._id %>">
                                        转</button>
                                    <button class="action-btn share-btn"> 砖转祝</button>
                                </div>
                                <form dir="rtl" id="commentForm-<%= post._id %>" action="/comment/<%= post._id %>" method="POST"
                                    class="comment-form mt-3" style="display: none;">
                                    <div class="mb-2">
                                        <input type="text" name="commenter" class="form-control" placeholder="砖"
                                            value="<%-name%>" hidden required>
                                    </div>
                                    <div class="mb-2">
                                        <input type="text" name="content" class="comment_content"
                                            placeholder="转 转..." required>
                                    </div>
                                    <button type="submit" class="btn_comment">砖 转</button>
                                </form>

                                <!-- 爪转 转转 拽转 -->
                                <% if (post.comments && post.comments.length> 0) { %>
                                    <div dir="rtl" class="commentsC mt-3">
                                        <h6>转转:</h6>
                                        <ul style="list-style: none;" class="list-group">
                                            <% post.comments.forEach(comment=> { %>
                                                <li class="singleC">
                                                    <strong>
                                                        <%= comment.commenter %>:
                                                    </strong>
                                                    <%= comment.content %>
                                                </li>
                                                <% }) %>
                                        </ul>
                                    </div>
                                    <% } %>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <div class="no-posts">
                                        <h2>There is no posts yet</h2>
                                        <p>Be the first to upload!</p>
                                        <a class="upload-link">Upload new post</a>
                                    </div>
                                    <% } %>
                </div>
            </div>

            <!-- Contacts Sidebar - col-2 -->
            <div id="contacts" class="col-2" style="height: 90%;">
                <h1 id="head-contacts">专</h1>
                <div id="suggestions">
                    <div class="profile">
                        <img class="profiles" src="/profile.png" alt="profile">
                        <div class="contact">
                            <h1 class="names">砖专</h1>
                            <button class="add">+ Add Friend</button>
                        </div>
                    </div>
                    <div class="profile">
                        <img class="profiles" src="/profile.png" alt="profile">
                        <div class="contact">
                            <h1 class="names"></h1>
                            <button class="add">+ Add Friend</button>
                        </div>
                    </div>
                    <div class="profile">
                        <img class="profiles" src="/profile.png" alt="profile">
                        <div class="contact">
                            <h1 class="names"></h1>
                            <button class="add">+ Add Friend</button>
                        </div>
                    </div>
                    <div class="profile">
                        <img class="profiles" src="/profile.png" alt="profile">
                        <div class="contact">
                            <h1 class="names"></h1>
                            <button class="add">+ Add Friend</button>
                        </div>
                    </div>
                    <div class="profile">
                        <img class="profiles" src="/profile.png" alt="profile">
                        <div class="contact">
                            <h1 class="names"></h1>
                            <button class="add">+ Add Friend</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div id="popup" class="popup">
            <div class="popup-content">
                <button class="close-btn">&times;</button>

                <h2>注转 驻住 砖</h2>

                <form action="/posts" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <label>转:</label>
                        <input type="file" name="image" accept="image/*" required>
                    </div>

                    <div class="form-group">
                        <label>转专:</label>
                        <textarea name="description" placeholder="转  转 转专 砖..." required></textarea>
                    </div>

                    <div class="form-group" style="display: none;">
                        <input value="<%-name%>" type="text" name="author" placeholder="砖 爪专" required>
                    </div>

                    <div class="form-group">
                        <button type="submit">砖专 驻住</button>
                    </div>
                </form>
            </div>
        </div>
        <button class="floating-btn" id="floatingBtn" onclick="openPopup()">
            +
        </button>

        <script>
            function openPopup() {
                const popup = document.getElementById('popup');
                const floatingBtn = document.getElementById('floatingBtn');

                if (popup) {
                    popup.classList.remove('hide');
                    floatingBtn.style.display = 'none'; // 住转专转 驻转专
                } else {
                    alert('住祝 驻住 砖!');
                }
            }

            // 驻拽爪 住专转 驻驻驻 专转 驻转专
            function closePopup() {
                const popup = document.getElementById('popup');
                const floatingBtn = document.getElementById('floatingBtn');

                if (popup) {
                    popup.classList.add('hide');
                    floatingBtn.style.display = 'flex'; // 专转 驻转专
                }
            }

            // 住驻转 event listener 驻转专 住专 专 注转 祝
            document.addEventListener('DOMContentLoaded', function () {
                const closeBtn = document.querySelector('.close-btn');
                if (closeBtn) {
                    closeBtn.addEventListener('click', closePopup);
                }
            });

            //  爪 注 专拽注  住专 转 驻驻驻
            document.addEventListener('click', function (event) {
                const popup = document.getElementById('popup');
                const floatingBtn = document.getElementById('floatingBtn');

                //  爪 注 专拽注 砖专 ( 注 驻爪)
                if (event.target.style.backgroundColor === 'black' && event.target.style.opacity === '0.5') {
                    popup.classList.add('hide');
                    floatingBtn.style.display = 'flex';
                }
            });

            //  拽砖 ESC 住专转 驻驻驻
            document.addEventListener('keydown', function (event) {
                if (event.key === 'Escape') {
                    const popup = document.getElementById('popup');
                    const floatingBtn = document.getElementById('floatingBtn');

                    if (popup && !popup.classList.contains('hide')) {
                        popup.classList.add('hide');
                        floatingBtn.style.display = 'flex';
                    }
                }
            });
            const buttons = document.getElementsByClassName("add");
            for (let btn of buttons) {
                btn.onclick = function () {
                    btn.innerHTML = "Friend Added!";
                    btn.disabled = true;
                    btn.style.backgroundColor = "#6c757d";
                    btn.style.color = "white";
                };
            }

            // Post interactions
            document.addEventListener('DOMContentLoaded', function () {
                // Like buttons
                const likeButtons = document.querySelectorAll('.like-btn');
                likeButtons.forEach(btn => {
                    btn.addEventListener('click', function () {
                        if (this.classList.contains('liked')) {
                            this.innerHTML = 'わ 转';
                            this.classList.remove('liked');
                        } else {
                            this.innerHTML = 'わ 转';
                            this.classList.add('liked');
                        }
                    });
                });

                // Comment buttons
                // Comment buttons - Show/Hide the comment form
                const commentButtons = document.querySelectorAll('.comment-btn');
                commentButtons.forEach(btn => {
                    btn.addEventListener('click', function () {
                        const postId = btn.getAttribute('data-post-id');
                        const form = document.getElementById(`commentForm-${postId}`);

                        if (form) {
                            // 住专  驻住 专 拽
                            document.querySelectorAll('.comment-form').forEach(f => {
                                if (f !== form) f.style.display = 'none';
                            });

                            // 爪/住转专 转 驻住 砖 驻住 
                            form.style.display = (form.style.display === 'none') ? 'block' : 'none';

                            //  驻住 砖专注 驻转
                            if (form.style.display === 'block') {
                                form.scrollIntoView({ behavior: 'smooth', block: 'start' });
                            }
                        }
                    });
                });

                // Share buttons
            });

            // Popup functionality
            const popup = document.getElementById('popup');
            popup.classList.add('hide');

            document.addEventListener("DOMContentLoaded", function () {
                const badWords = [
                    "", "拽", "", "", "", " ",
                    "住", "专", "砖专", "住转", "", "专", "砖",
                    "", "", "驻专", "", " 转转", " 砖", "转转", "转砖专祝"
                ];

                const normalize = str => str.replace(/\s+/g, '');

                const commentForms = document.querySelectorAll(".comment-form");
                commentForms.forEach(form => {
                    form.addEventListener("submit", function (e) {
                        const contentInput = form.querySelector("input[name='content']");
                        const rawContent = contentInput.value;
                        const normalizedContent = normalize(rawContent);

                        // 拽  拽转 拽
                        const hasBadWord = badWords.some(word => normalizedContent.includes(normalize(word)));

                        // 爪专转 转转 砖   拽转
                        let errorBox = form.querySelector(".errorBox");
                        if (!errorBox) {
                            errorBox = document.createElement("div");
                            errorBox.className = "errorBox";
                            errorBox.style.color = "red";
                            errorBox.style.marginTop = "5px";
                            errorBox.style.display = "none";
                            form.insertBefore(errorBox, form.querySelector("button"));
                        }

                        if (hasBadWord) {
                            e.preventDefault();
                            errorBox.innerText = " 转    住专转.  住 砖.";
                            errorBox.style.display = "block";
                            contentInput.style.borderColor = "red";
                        } else {
                            errorBox.style.display = "none";
                            contentInput.style.borderColor = ""; // 专 爪注 专
                        }
                    });
                });
            });


        </script>

</body>

</html>